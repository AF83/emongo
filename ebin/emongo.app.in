#!/bin/bash

VERSION=${1}
MODULES=`ls -1 src/*.erl | awk -F[/.] '{ print "\t\t" $2 }' | sed '$q;s/$/,/g'`

cat > ebin/emongo.app << EOF
{application, emongo, [
    {description, "Erlang MongoDB Driver"},
    {vsn, "${VERSION}"},
    {modules, [
${MODULES}
    ]},
    {registered, []},
    {mod, {emongo_app, []}},
    {applications, [kernel, stdlib]}
]}.
EOF